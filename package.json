{
  "name": "sdk",
  "version": "0.4.8",
  "private": true,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "scripts": {
    "clean": "git clean -fdX && find . -type f \\( -name 'pnpm-lock.yaml' -o -name 'package-lock.json' -o -name 'yarn.lock' -o -name 'bun.lockb' \\) -exec rm -f {} + && bun install",
    "lint:biome": "biome lint --write --unsafe .",
    "knip": "knip",
    "format:biome": "biome format --write .",
    "publint": "turbo publint",
    "attw": "turbo attw",
    "build": "turbo build",
    "forge:build": "turbo forge:build",
    "forge:dependencies": "turbo forge:dependencies",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "connect": "turbo connect",
    "codegen": "turbo codegen",
    "deploy": "turbo deploy",
    "translate": "turbo translate",
    "ci:local": "bunx turbo format lint build attw publint test:coverage --concurrency=100% --summarize --env-mode=loose"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.0",
    "lefthook": "1.7.15",
    "turbo": "2.1.2",
    "typescript": "5.6.2",
    "knip": "5.30.2",
    "@types/bun": "1.1.9",
    "@arethetypeswrong/cli": "0.16.2",
    "publint": "0.2.10",
    "tsup": "8.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": ["apps/*", "packages/*", "packages/repo/*"],
  "trustedDependencies": ["@biomejs/biome", "lefthook"]
}
