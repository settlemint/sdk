{
  "name": "sdk",
  "version": "0.6.47",
  "private": true,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "scripts": {
    "clean": "git clean -fdX && find . -type f \\( -name 'pnpm-lock.yaml' -o -name 'package-lock.json' -o -name 'yarn.lock' -o -name 'bun.lockb' \\) -exec rm -f {} + && bun install",
    "lint:biome": "biome lint --write --unsafe .",
    "knip": "knip",
    "format:biome": "biome format --write .",
    "publint": "turbo publint",
    "attw": "turbo attw",
    "build": "turbo build",
    "dev": "turbo dev --concurrency=12",
    "lint": "turbo lint",
    "registry:connect": "turbo registry:connect",
    "registry:codegen": "turbo registry:codegen",
    "codegen": "turbo codegen",
    "registry": "turbo registry",
    "publish-npm": "turbo publish-npm",
    "docker": "turbo docker",
    "deploy": "turbo deploy",
    "translate": "turbo translate",
    "typecheck": "turbo typecheck",
    "ci:local": "bunx turbo format lint build attw publint test:coverage --concurrency=12 --summarize",
    "postinstall": "lefthook install",
    "test:typecheck": "cd test && bunx tsc",
    "test:e2e": "bun test test/*.ts --coverage --preload ./test/scripts/setup-platform-resources.ts",
    "link:all": "for dir in sdk/*; do cd $dir && bun link && cd ../..; done"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "lefthook": "1.9.2",
    "turbo": "2.3.3",
    "typescript": "5.7.2",
    "knip": "5.41.0",
    "@types/bun": "1.1.14",
    "@arethetypeswrong/cli": "0.17.1",
    "publint": "0.2.12",
    "tsup": "8.3.5"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": ["sdk/*", "apps/*"],
  "trustedDependencies": [
    "@biomejs/biome",
    "bufferutil",
    "esbuild",
    "keccak",
    "keytar",
    "lefthook",
    "secp256k1",
    "sharp",
    "utf-8-validate"
  ],
  "overrides": {
    "elliptic": "6.6.1",
    "ws": "8.18.0",
    "react-is": "19.0.0"
  }
}
