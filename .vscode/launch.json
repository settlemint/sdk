{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "internalConsoleOptions": "openOnSessionStart",
      "request": "launch",
      "name": "SDK: Create",
      "program": "../../sdk/cli/src/cli.ts",
      "args": ["create"],
      "cwd": "${workspaceFolder}/apps/registry",
      "watchMode": true,
      "strictEnv": false,
      "stopOnEntry": false,
    },
    {
      "type": "bun",
      "internalConsoleOptions": "openOnSessionStart",
      "request": "launch",
      "name": "SDK: Connect",
      "program": "../../sdk/cli/src/cli.ts",
      "args": ["connect", "--accept-defaults"],
      "cwd": "${workspaceFolder}/apps/registry",
      "watchMode": true,
      "strictEnv": false,
      "stopOnEntry": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "openOnSessionStart",
      "request": "launch",
      "name": "SDK: Update Custom Deployment",
      "program": "../../sdk/src/cli/cli.ts",
      "args": [
        "custom-deployment",
        "update",
        "--image-path",
        "ghcr.io/settlemint/starterkit-asset-tokenization:main",
        "--port",
        "3000"
      ],
      "cwd": "${workspaceFolder}/apps/registry",
      "watchMode": true,
      "strictEnv": false,
      "stopOnEntry": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "openOnSessionStart",
      "request": "attach",
      "name": "SDK: Attach to process",
      "url": "ws://localhost:6499/",
      "stopOnEntry": true
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Debug File (Bun)",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false
    },
  ]
}
