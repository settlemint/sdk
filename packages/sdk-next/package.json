{
  "name": "@settlemint/sdk-next",
  "description": "SettleMint SDK for Next.js, integrate SettleMint into your application with ease.",
  "version": "0.0.1",
  "type": "module",
  "private": false,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/packages/next/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git",
    "directory": "packages/next"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "files": ["dist"],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/tsup.config.d.mts",
        "default": "./dist/tsup.config.mjs"
      },
      "require": {
        "types": "./dist/tsup.config.d.ts",
        "default": "./dist/tsup.config.js"
      }
    }
  },
  "scripts": {
    "build": "tsup-node src/index.ts",
    "dev": "tsup-node src/index.ts --watch",
    "publint": "publint run --strict",
    "attw": "attw --pack . --ignore-rules no-resolution",
    "test": "bun test",
    "test:coverage": "bun test --coverage"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/tsup-config": "workspace:*"
  },
  "dependencies": {
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "iron-session": "^8.0.2",
    "path-to-regexp": "^7.1.0",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "next": "^13.5.4 || ^14.0.3 || >=15.0.0-rc"
  },
  "engines": {
    "node": ">=16"
  }
}
