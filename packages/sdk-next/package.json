{
  "name": "@settlemint/sdk-next",
  "description": "SettleMint SDK for Next.js, integrate SettleMint into your application with ease.",
  "version": "0.0.1",
  "type": "module",
  "private": false,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/packages/sdk-next/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git",
    "directory": "packages/sdk-next"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "files": ["dist"],
  "exports": {
    "./config": {
      "import": {
        "types": "./dist/config/with-settlemint.d.ts",
        "default": "./dist/config/with-settlemint.js"
      },
      "require": {
        "types": "./dist/config/with-settlemint.d.cts",
        "default": "./dist/config/with-settlemint.cjs"
      }
    },
    "./middleware": {
      "import": {
        "types": "./dist/middleware/middleware.d.ts",
        "default": "./dist/middleware/middleware.js"
      },
      "require": {
        "types": "./dist/middleware/middleware.d.cts",
        "default": "./dist/middleware/middleware.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup-node src/config/with-settlemint.ts src/middleware/middleware.ts",
    "dev": "tsup-node src/config/with-settlemint.ts src/middleware/middleware.ts --watch",
    "publint": "publint run --strict",
    "attw": "attw --pack . --ignore-rules no-resolution",
    "test": "bun test",
    "test:coverage": "bun test --coverage"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "next": "14.2.5"
  },
  "dependencies": {
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "iron-session": "^8.0.2",
    "path-to-regexp": "^7.1.0",
    "zod": "^3.23.8",
    "@settlemint/sdk-common": "workspace:*"
  },
  "peerDependencies": {
    "next": "^13.5.4 || ^14.0.3 || >=15.0.0-rc"
  },
  "engines": {
    "node": ">=18"
  }
}
