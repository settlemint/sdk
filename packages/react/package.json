{
  "name": "@settlemint/sdk-react",
  "description": "SettleMint SDK for React, integrate SettleMint into your application with ease.",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "private": false,
  "license": "MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/packages/react/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git",
    "directory": "packages/next"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "files": ["dist"],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "pkg:build": "tsup --format esm,cjs --dts",
    "pkg:dev": "tsup --format esm,cjs --dts --watch",
    "pkg:publint": "publint run --strict",
    "pkg:attw": "attw --pack ."
  },
  "dependencies": {
    "@tanstack/react-query": "^5"
  },
  "devDependencies": {
    "tsup": "8.2.4",
    "react": "18.3.1",
    "@types/react": "18.3.3"
  },
  "peerDependencies": {
    "react": ">=18 || >=19.0.0-beta"
  },
  "engines": {
    "node": ">=16"
  }
}
