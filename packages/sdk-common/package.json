{
  "name": "@settlemint/sdk-common",
  "description": "SettleMint SDK Configuration, integrate SettleMint into your application with ease.",
  "version": "0.0.1",
  "type": "module",
  "private": false,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/packages/sdk-common/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk-sdk.git",
    "directory": "packages/sdk-common"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk-sdk/issues",
    "email": "support@settlemint.com"
  },
  "files": ["dist"],
  "exports": {
    "./config": {
      "import": {
        "types": "./dist/config/config.d.ts",
        "default": "./dist/config/config.js"
      },
      "require": {
        "types": "./dist/config/config.d.cts",
        "default": "./dist/config/config.cjs"
      }
    },
    "./utils/*": {
      "import": {
        "types": "./dist/utils/*.d.ts",
        "default": "./dist/utils/*.js"
      },
      "require": {
        "types": "./dist/utils/*.d.cts",
        "default": "./dist/utils/*.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup-node src/config/config.ts src/utils/path.ts",
    "dev": "tsup-node src/config/config.ts src/utils/path.ts --watch",
    "publint": "publint run --strict",
    "attw": "attw --pack . --ignore-rules no-resolution",
    "test": "bun test",
    "test:coverage": "bun test --coverage"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "lilconfig": "3.1.2"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=18"
  }
}
