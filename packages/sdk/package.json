{
  "name": "@settlemint/sdk",
  "description": "SettleMint SDK, integrate SettleMint into your application with ease.",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "private": false,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/packages/sdk/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "files": ["dist", "templates"],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "bin": {
    "settlemint": "dist/index.js"
  },
  "scripts": {
    "pkg:build": "tsup-node --format esm,cjs --dts",
    "pkg:dev": "tsup-node --format esm,cjs --dts --watch",
    "pkg:publint": "publint run --strict",
    "pkg:attw": "attw --pack .",
    "pkg:test": "vitest",
    "pkg:test:coverabe": "vitest --coverage"
  },
  "devDependencies": {
    "@types/cross-spawn": "6.0.6",
    "@types/npmcli__package-json": "4.0.4"
  },
  "dependencies": {
    "@clack/prompts": "0.7.0",
    "@commander-js/extra-typings": "12.1.0",
    "@graphql-codegen/cli": "5.0.2",
    "@npmcli/package-json": "5.2.0",
    "commander": "12.1.0",
    "cosmiconfig": "9.0.0",
    "cross-spawn": "7.0.3",
    "dotenv": "16.4.5",
    "graphql": "16.9.0",
    "openapi-typescript": "7.3.0",
    "ts-deepmerge": "7.0.1",
    "viem": "2.19.4",
    "yoctocolors": "2.1.1",
    "zod": "3.23.8"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=16"
  }
}
