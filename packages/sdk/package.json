{
  "name": "@settlemint/sdk",
  "description": "SettleMint SDK, integrate SettleMint into your application with ease.",
  "version": "0.0.1",
  "type": "module",
  "private": false,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/packages/sdk/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "files": ["dist"],
  "exports": {
    "./*": {
      "import": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.mjs"
      },
      "require": {
        "types": "./dist/*.d.cts",
        "default": "./dist/*.cjs"
      }
    }
  },
  "bin": {
    "settlemint": "dist/cli/cli.mjs"
  },
  "scripts": {
    "build": "tsup-node",
    "dev": "tsup-node --watch",
    "publint": "publint run --strict",
    "attw": "attw --pack .",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6",
    "@types/npmcli__package-json": "^4"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12",
    "@graphql-codegen/cli": "^5",
    "@graphql-codegen/schema-ast": "^4",
    "@graphql-codegen/typescript": "^4",
    "@graphql-codegen/typescript-graphql-request": "^6",
    "@graphql-codegen/typescript-operations": "^4",
    "@inquirer/prompts": "^5",
    "@npmcli/package-json": "^5",
    "@rainbow-me/rainbowkit": "^2",
    "abitype": "^1",
    "commander": "^12",
    "cross-spawn": "^7",
    "dotenv": "^16",
    "giget": "^1",
    "graphql": "^16",
    "graphql-request": "^7",
    "openapi-fetch": "^0.12",
    "openapi-typescript": "^7",
    "ora": "^8",
    "path-to-regexp": "^7",
    "ts-deepmerge": "^7",
    "viem": "^2",
    "wagmi": "^2",
    "yoctocolors": "^2",
    "zod": "^3"
  },
  "peerDependencies": {
    "next": ">=14",
    "react": ">=18"
  },
  "engines": {
    "node": ">=20"
  }
}
