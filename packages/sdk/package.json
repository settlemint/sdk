{
  "name": "@settlemint/sdk",
  "description": "SettleMint SDK, integrate SettleMint into your application with ease.",
  "version": "0.0.1",
  "type": "module",
  "private": false,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/packages/sdk/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "files": ["dist"],
  "exports": {
    "./*": {
      "import": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      },
      "require": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.cjs"
      }
    }
  },
  "bin": {
    "settlemint": "dist/cli/cli.js"
  },
  "scripts": {
    "build": "tsup-node",
    "dev": "tsup-node --watch",
    "publint": "publint run --strict",
    "attw": "attw --pack . --ignore-rules no-resolution",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/cross-spawn": "6.0.6",
    "@types/npmcli__package-json": "4.0.4"
  },
  "dependencies": {
    "@clack/prompts": "0.7.0",
    "@commander-js/extra-typings": "12.1.0",
    "@graphql-codegen/cli": "5.0.2",
    "@npmcli/package-json": "5.2.0",
    "@tanstack/react-query": "5.52.2",
    "commander": "12.1.0",
    "cross-spawn": "7.0.3",
    "dotenv": "16.4.5",
    "giget": "1.2.3",
    "graphql": "16.9.0",
    "graphql-request": "7.1.0",
    "next-themes": "0.3.0",
    "openapi-fetch": "0.11.1",
    "openapi-typescript": "7.3.0",
    "path-to-regexp": "7.1.0",
    "ts-deepmerge": "7.0.1",
    "viem": "2.20.1",
    "wagmi": "2.12.7",
    "yoctocolors": "2.1.1",
    "zod": "3.23.8"
  },
  "peerDependencies": {
    "next": ">=14",
    "react": ">=18"
  },
  "engines": {
    "node": ">=20"
  }
}
