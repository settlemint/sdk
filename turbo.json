{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": ["BTP_PAT_TOKEN", "BTP_HASURA_GQL_ADMIN_SECRET", "NEXT_PUBLIC_BTP_APP_URL"],
  "tasks": {
    "//#lint": {
      "cache": false
    },
    "//#format": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test", "build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "attw": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "publint": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    }
  }
}
