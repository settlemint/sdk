{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "dangerouslyDisablePackageManagerCheck": true,
  "tasks": {
    "registry:build": {
      "dependsOn": ["^build", "registry:codegen"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "artifacts/**"]
    },
    "build": {
      "dependsOn": ["^build", "codegen"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "artifacts/**"]
    },
    "registry:connect": {
      "dependsOn": ["^build"],
      "inputs": ["settlemint.config.mjs", ".env.local"],
      "outputs": ["settlemint.config.mjs", ".env.local"]
    },
    "registry:codegen": {
      "dependsOn": ["registry:connect"],
      "inputs": ["graphql/**"],
      "outputs": [".settlemint/**"]
    },
    "codegen": {
      "inputs": ["graphql/**"],
      "outputs": [".settlemint/**"]
    },
    "//#lint:biome": {
      "dependsOn": ["//#format:biome"]
    },
    "//#format:biome": {},
    "lint": {
      "dependsOn": ["^build", "//#lint:biome"]
    },
    "format": {
      "dependsOn": ["//#format:biome"]
    },
    "//#knip": {
      "cache": false
    },
    "deploy": {
      "outputs": ["apps/asset-tokenization/contracts/ignition/deployments/**"]
    },
    "attw": {
      "dependsOn": ["build"]
    },
    "registry": {
      "outputs": ["public/*.json"]
    },
    "publint": { "dependsOn": ["build"] },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:coverage": {
      "dependsOn": ["^build"]
    },
    "translate": {
      "inputs": ["messages/**"]
    }
  }
}
