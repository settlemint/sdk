{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "dangerouslyDisablePackageManagerCheck": true,
  "tasks": {
    "build": {
      "dependsOn": ["codegen", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "artifacts/**"]
    },
    "codegen": {
      "dependsOn": ["connect", "^codegen"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".settlemintrc.json",
        "graphql/**",
        "apps/asset-tokenization/contracts/ignition/deployments/**"
      ],
      "outputs": [".settlemint/**"]
    },
    "//#lint:biome": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build", "//#lint:biome", "^lint"]
    },
    "//#knip": {
      "cache": false
    },
    "deploy": {
      "outputs": ["apps/asset-tokenization/contracts/ignition/deployments/**"]
    },
    "attw": {
      "dependsOn": ["build"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "publint": { "dependsOn": ["build"] },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"]
    },
    "connect": {
      "inputs": [".settlemintrc.json", ".env.local"],
      "outputs": [".settlemintrc.json", ".env.local"]
    }
  }
}
