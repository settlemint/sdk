{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "dangerouslyDisablePackageManagerCheck": true,
  "tasks": {
    "build": {
      "dependsOn": ["^build", "codegen", "docs"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "artifacts/**"]
    },
    "codegen": {
      "inputs": ["graphql/**"],
      "outputs": [".settlemint/**", "schema.graphql"]
    },
    "publish-npm": {
      "dependsOn": ["build"],
      "cache": false
    },
    "//#lint:biome": {
      "dependsOn": ["//#format:biome"]
    },
    "//#format:biome": {},
    "lint": {
      "dependsOn": ["^build", "//#lint:biome"]
    },
    "format": {
      "dependsOn": ["//#format:biome"]
    },
    "//#knip": {
      "cache": false
    },
    "docker": {
      "cache": false
    },
    "attw": {
      "dependsOn": ["build"]
    },
    "registry": {
      "outputs": ["public/*.json"]
    },
    "publint": { "dependsOn": ["build"] },
    "dev": {
      "dependsOn": ["^build", "docs"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:coverage": {
      "dependsOn": ["^build"]
    },
    "translate": {
      "inputs": ["messages/**"]
    },
    "typecheck": {
      "dependsOn": ["^build", "codegen"]
    },
    "docs": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "scripts/create-docs.ts", "../../typedoc.config.mjs"],
      "outputs": ["docs/**", "!docs/ABOUT.md"]
    },
    "//#generate-readme": {
      "dependsOn": ["^build"],
      "inputs": ["scripts/generate-readme.ts", "scripts/templates/README-template.md", "sdk/**/docs/**"],
      "outputs": ["sdk/**/README.md"]
    }
  }
}
