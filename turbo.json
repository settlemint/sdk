{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "dangerouslyDisablePackageManagerCheck": true,
  "tasks": {
    "build": {
      "dependsOn": ["codegen", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "artifacts/**"]
    },
    "connect": {
      "inputs": [".settlemintrc.json", ".env.local"],
      "outputs": [".settlemintrc.json", ".env.local"]
    },
    "codegen": {
      "dependsOn": ["connect"],
      "inputs": ["graphql/**"],
      "outputs": [".settlemint/**"]
    },
    "//#lint:biome": {},
    "//#format:biome": {},
    "lint": {
      "dependsOn": ["^build", "//#lint:biome"]
    },
    "format": {
      "dependsOn": ["//#format:biome"]
    },
    "//#knip": {
      "cache": false
    },
    "deploy": {
      "outputs": ["apps/asset-tokenization/contracts/ignition/deployments/**"]
    },
    "attw": {
      "dependsOn": ["build"]
    },
    "publint": { "dependsOn": ["build"] },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:coverage": {}
  }
}
