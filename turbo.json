{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^codegen", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "inputs": ["$TURBO_DEFAULT$", ".settlemintrc.json"]
    },
    "//#lint:biome": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build", "//#lint:biome", "^lint"]
    },
    "//#format": {
      "cache": false
    },
    "//#knip": {
      "cache": false
    },
    "attw": {
      "dependsOn": ["build"]
    },
    "publint": { "dependsOn": ["build"] },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"]
    },
    "connect": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
