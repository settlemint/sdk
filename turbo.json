{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "//#lint": {
      "cache": false
    },
    "//#format": {
      "cache": false
    },
    "//#knip": {
      "cache": false
    },
    "pkg:build": {
      "dependsOn": ["^pkg:build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "pkg:dev": {
      "cache": false,
      "persistent": true
    },
    "pkg:test": {
      "dependsOn": ["^pkg:test", "pkg:build"]
    },
    "pkg:attw": {
      "dependsOn": ["pkg:build"]
    },
    "pkg:publint": { "dependsOn": ["pkg:build"] }
  }
}
