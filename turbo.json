{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "dangerouslyDisablePackageManagerCheck": true,
  "tasks": {
    "forge:dependencies": {
      "inputs": ["contracts/foundry.toml"],
      "outputs": ["contracts/dependencies/**"]
    },
    "build": {
      "dependsOn": ["codegen", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "artifacts/**"]
    },
    "connect": {
      "inputs": ["settlemint.config.mjs", ".env.local"],
      "outputs": ["settlemint.config.mjs", ".env.local"]
    },
    "forge:build": {
      "dependsOn": ["connect"],
      "inputs": ["contracts/src/**", "contracts/deployments/*.args.txt"],
      "outputs": ["contracts/deployments/*.deployments.json", "contracts/out/**"]
    },
    "codegen": {
      "dependsOn": ["connect", "forge:build"],
      "inputs": ["graphql/**"],
      "outputs": [".settlemint/**"]
    },
    "//#lint:biome": {},
    "//#format:biome": {},
    "lint": {
      "dependsOn": ["^build", "//#lint:biome"]
    },
    "format": {
      "dependsOn": ["//#format:biome"]
    },
    "//#knip": {
      "cache": false
    },
    "deploy": {
      "outputs": ["apps/asset-tokenization/contracts/ignition/deployments/**"]
    },
    "attw": {
      "dependsOn": ["build"]
    },
    "publint": { "dependsOn": ["build"] },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:coverage": {
      "dependsOn": ["^build"]
    },
    "translate": {
      "inputs": ["messages/**"]
    }
  }
}
