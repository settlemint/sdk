{
  "name": "@settlemint/sdk-js",
  "description": "SettleMint SDK, integrate SettleMint into your application with ease.",
  "version": "0.5.0",
  "type": "module",
  "private": false,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/sdk/js/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git",
    "directory": "sdk/js"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "files": ["dist"],
  "main": "./dist/settlemint.cjs",
  "module": "./dist/settlemint.mjs",
  "types": "./dist/settlemint.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/settlemint.d.ts",
        "default": "./dist/settlemint.mjs"
      },
      "require": {
        "types": "./dist/settlemint.d.cts",
        "default": "./dist/settlemint.cjs"
      }
    }
  },
  "scripts": {
    "codegen": "gql-tada generate-schema ${CONSOLE_GRAPHQL:-https://console.settlemint.com/api/graphql} && gql-tada turbo",
    "build": "tsup-node",
    "dev": "tsup-node --watch",
    "publint": "publint run --strict",
    "attw": "attw --pack .",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "publish-npm": "bun publish --tag ${TAG} --access public || exit 0",
    "prepack": "cp ../../LICENSE .",
    "docs": "tsdoc --src=src/settlemint.ts --types=Interfaces,Types,Classes,Constants --dest=./docs/REFERENCE.md",
    "docs-typedoc": "typedoc --plugin typedoc-plugin-markdown --entryPoints src/settlemint.ts --externalPattern 'graphql/**/*.ts' --excludeExternals --outputFileStrategy modules --cleanOutputDir false --out ./docs --entryFileName REFERENCE.md --readme none"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1",
    "tsdoc-markdown": "1.0.0",
    "typedoc": "0.27.6",
    "typedoc-plugin-markdown": "4.4.1"
  },
  "dependencies": {
    "gql.tada": "^1",
    "graphql-request": "^7",
    "zod": "^3",
    "@settlemint/sdk-utils": "workspace:*"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=20"
  }
}
