{
  "name": "@settlemint/sdk-eas",
  "description": "Ethereum Attestation Service (EAS) integration for SettleMint SDK",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/sdk/eas/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git",
    "directory": "sdk/eas"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/eas.cjs",
  "module": "./dist/eas.js",
  "types": "./dist/eas.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/eas.d.ts",
        "default": "./dist/eas.js"
      },
      "require": {
        "types": "./dist/eas.d.cts",
        "default": "./dist/eas.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "publint": "publint run --strict",
    "attw": "attw --pack .",
    "typecheck": "tsc --noEmit",
    "publish-npm": "bun publish --tag ${TAG} --access public || exit 0",
    "prepack": "cp ../../LICENSE .",
    "codegen": "gql-tada generate-output",
    "docs": "typedoc --options '../../typedoc.config.mjs' --entryPoints src/eas.ts --out ./docs"
  },
  "devDependencies": {},
  "dependencies": {
    "@settlemint/sdk-portal": "workspace:*",
    "@settlemint/sdk-thegraph": "workspace:*",
    "@settlemint/sdk-utils": "workspace:*",
    "gql.tada": "^1",
    "viem": "^2",
    "zod": "^4"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "settlemint",
    "blockchain",
    "blockchain-development",
    "enterprise-blockchain",
    "web3",
    "web3-development",
    "web3-tools",
    "sdk",
    "typescript",
    "eas",
    "ethereum-attestation-service",
    "attestation",
    "verification",
    "document-verification"
  ]
}
