{
  "name": "@settlemint/sdk-hasura",
  "description": "SettleMint SDK, integrate SettleMint into your application with ease.",
  "version": "0.5.0",
  "type": "module",
  "private": false,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/packages/js/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git",
    "directory": "packages/hasura"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "files": ["dist"],
  "main": "./dist/hasura.cjs",
  "module": "./dist/hasura.mjs",
  "types": "./dist/hasura.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/hasura.d.ts",
        "default": "./dist/hasura.mjs"
      },
      "require": {
        "types": "./dist/hasura.d.cts",
        "default": "./dist/hasura.cjs"
      }
    },
    "./drizzle": {
      "import": {
        "types": "./dist/drizzle.d.ts",
        "default": "./dist/drizzle.mjs"
      }
    }
  },
  "scripts": {
    "build": "tsup-node",
    "dev": "tsup-node --watch",
    "publint": "publint run --strict",
    "attw": "attw --pack .",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "publish-npm": "bun publish --tag ${TAG} --access public || exit 0"
  },
  "devDependencies": {
    "@types/pg": "^8"
  },
  "dependencies": {
    "gql.tada": "^1",
    "@settlemint/sdk-utils": "workspace:*",
    "graphql-request": "^7",
    "zod": "^3",
    "drizzle-orm": "^0.38",
    "pg": "^8",
    "drizzle-kit": "^0.30"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=20"
  }
}
