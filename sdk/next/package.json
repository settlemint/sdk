{
  "name": "@settlemint/sdk-next",
  "description": "SettleMint SDK, integrate SettleMint into your application with ease.",
  "version": "0.5.0",
  "type": "module",
  "private": false,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/sdk/blob/main/sdk/next/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/sdk.git",
    "directory": "sdk/next"
  },
  "bugs": {
    "url": "https://github.com/settlemint/sdk/issues",
    "email": "support@settlemint.com"
  },
  "files": ["dist"],
  "main": "./dist/all.cjs",
  "module": "./dist/all.mjs",
  "types": "./dist/all.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/all.d.ts",
        "default": "./dist/all.mjs"
      },
      "require": {
        "types": "./dist/all.d.cts",
        "default": "./dist/all.cjs"
      }
    },
    "./middlewares/*": {
      "import": {
        "types": "./dist/middlewares/*.d.ts",
        "default": "./dist/middlewares/*.mjs"
      },
      "require": {
        "types": "./dist/middlewares/*.d.cts",
        "default": "./dist/middlewares/*.cjs"
      }
    },
    "./components/*": {
      "import": {
        "types": "./dist/components/*.d.ts",
        "default": "./dist/components/*.mjs"
      },
      "require": {
        "types": "./dist/components/*.d.cts",
        "default": "./dist/components/*.cjs"
      }
    },
    "./config/*": {
      "import": {
        "types": "./dist/config/*.d.ts",
        "default": "./dist/config/*.mjs"
      },
      "require": {
        "types": "./dist/config/*.d.cts",
        "default": "./dist/config/*.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup-node",
    "dev": "tsup-node --watch",
    "publint": "publint run --strict",
    "attw": "attw --pack .",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "publish-npm": "bun publish --tag ${TAG} --access public || exit 0",
    "prepack": "cp ../../LICENSE .",
    "docs": "typedoc --options '../../typedoc.config.mjs' --entryPoints src/components/test.tsx src/config/with-settlemint.ts src/middlewares/proxy.ts --out ./docs"
  },
  "devDependencies": { "@types/react": ">=18" },
  "dependencies": {
    "@settlemint/sdk-utils": "workspace:*",
    "path-to-regexp": "^8"
  },
  "peerDependencies": { "next": ">=15", "react": ">=18" },
  "engines": {
    "node": ">=20"
  }
}
